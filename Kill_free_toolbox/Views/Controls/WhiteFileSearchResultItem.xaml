<UserControl x:Class="Kill_free_toolbox.Views.Controls.WhiteFileSearchResultItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Kill_free_toolbox.Views.Controls"
             mc:Ignorable="d" 
                   TextOptions.TextFormattingMode="Display"
      TextOptions.TextRenderingMode="ClearType"
      TextOptions.TextHintingMode="Fixed"
             Height="60">
    
    <Border Background="Transparent" BorderThickness="1" CornerRadius="4" Margin="2"
            MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Border.ToolTip>
            <StackPanel x:Name="ToolTipPanel">
                <TextBlock x:Name="ToolTipFileName" FontWeight="Bold" FontSize="14" Foreground="Black" HorizontalAlignment="Left"/>
                <TextBlock x:Name="ToolTipDlls" TextWrapping="Wrap" MaxWidth="400" Foreground="Black"
                           FontSize="10" Margin="0,4,0,0" HorizontalAlignment="Left"/>
            </StackPanel>
        </Border.ToolTip>
        <Border.Effect>
            <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="1" Opacity="0.3" BlurRadius="2"/>
        </Border.Effect>
       
        
        <Grid Margin="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="48"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- 文件图标 -->
            <Border Grid.Column="0"  Background="Transparent"
                    VerticalAlignment="Top" Margin="0,4,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Image x:Name="FileIcon" Width="32" Height="32" Source="/Resources/app.ico"/>
                    <!-- 架构标签 -->
                    <TextBlock x:Name="ArchitectureText" FontSize="10" FontWeight="SemiBold" Text="X86" Grid.Row="1" 
                               HorizontalAlignment="Center" Margin="0,0,0,0"
          Foreground="#1976D2" VerticalAlignment="Bottom"/>
                </Grid>
                
            </Border>
            
            <!-- 主要信息区域 -->
            <Grid Grid.Column="1" Margin="12,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="AUTO"/>
                </Grid.RowDefinitions>

                <!-- 文件路径 -->
                <TextBlock x:Name="FilePathText" FontSize="15" Foreground="AliceBlue" Grid.Row="0" Text="C:\Windows\explorer.exe"
                          TextTrimming="CharacterEllipsis" Margin="10,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left"/>

                <StackPanel Grid.Row="1" Orientation="Horizontal">
                    <TextBlock x:Name="FileSizeText" FontSize="12" Text="文件大小：1MB" Foreground="AliceBlue" HorizontalAlignment="Left"/>
                    <TextBlock x:Name="DllCountText" FontSize="12" Text="非系统导出DLL数量：" Foreground="AliceBlue" HorizontalAlignment="Left"/>
                </StackPanel>
                

            </Grid>
        </Grid>
    </Border>
</UserControl>
