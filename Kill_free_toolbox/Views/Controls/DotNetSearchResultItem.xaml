<UserControl x:Class="Kill_free_toolbox.Views.Controls.DotNetSearchResultItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Kill_free_toolbox.Views.Controls"
             mc:Ignorable="d" 
             TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType"
        TextOptions.TextHintingMode="Fixed"
             
             Height="50">

    <Border Background="Transparent" BorderThickness="1" CornerRadius="4" Margin="2"
            MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Border.ToolTip>
            <StackPanel x:Name="ToolTipPanel">
                <TextBlock x:Name="ToolTipFileName" FontWeight="Bold" FontSize="14" Foreground="Black" HorizontalAlignment="Left"/>
                <TextBlock x:Name="ToolTipDotNetVersion" FontSize="12" Foreground="Black" HorizontalAlignment="Left"/>
                <TextBlock x:Name="ToolTipSignature" FontSize="12" Foreground="Black" HorizontalAlignment="Left"/>
                <TextBlock x:Name="ToolTipDlls" TextWrapping="Wrap" MaxWidth="400" Foreground="Black"
                           FontSize="10" Margin="0,4,0,0" HorizontalAlignment="Left"/>
            </StackPanel>
        </Border.ToolTip>
        <Border.Effect>
            <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="1" Opacity="0.3" BlurRadius="2"/>
        </Border.Effect>

        <Grid Margin="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="48"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 文件图标和状态标签 -->
            <Border Grid.Column="0" Background="Transparent"
                    VerticalAlignment="Top" Margin="0,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Image x:Name="FileIcon" Width="38" Height="38" Source="/Resources/app.ico"/>
                </Grid>
            </Border>

            <!-- 主要信息区域 -->
            <Grid Grid.Column="1" Margin="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 文件路径 -->
                <TextBlock x:Name="FileNameText" FontSize="14" Foreground="AliceBlue" Grid.Row="0" Text="explorer.exe"
                          TextTrimming="CharacterEllipsis" Margin="0,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left"/>

                <!-- 第二行：文件大小、.Net版本、签名状态 -->
                <StackPanel Grid.Row="1" Orientation="Horizontal">
                    <TextBlock x:Name="FileSizeText" FontSize="11" Text="文件大小：1MB" Foreground="AliceBlue" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Center"/>
                    <TextBlock x:Name="SignatureStatusText" FontSize="11" Margin="10,0,0,0" Text="签名：有效" Foreground="#4CAF50" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</UserControl>
