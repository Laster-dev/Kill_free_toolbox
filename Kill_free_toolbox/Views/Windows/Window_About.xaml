<Window x:Class="Kill_free_toolbox.Views.Windows.Window_About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="关于我们" Height="500" Width="800" 
        ResizeMode="NoResize" 
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType"
        TextOptions.TextHintingMode="Fixed"
        UseLayoutRounding="True"
        WindowStyle="None" 
        Topmost="True"
        AllowsTransparency="True" 
        Background="Transparent" 
        FocusVisualStyle="{x:Null}"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <!-- 动画资源 -->
        <Storyboard x:Key="MinimizeStoryboard">
            <DoubleAnimation Storyboard.TargetName="MainGrid" Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" From="1" To="0" Duration="0:0:0.15"/>
            <DoubleAnimation Storyboard.TargetName="MainGrid" Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" From="1" To="0" Duration="0:0:1.0"/>
            <DoubleAnimation Storyboard.TargetName="AllBorder" Storyboard.TargetProperty="Opacity" From="1" To="0" Duration="0:0:0.2"/>
        </Storyboard>
        <Storyboard x:Key="RestartStoryboard">
            <DoubleAnimation Storyboard.TargetName="MainGrid" Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" From="0" To="1" Duration="0:0:0.2"/>
            <DoubleAnimation Storyboard.TargetName="MainGrid" Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" From="0" To="1" Duration="0:0:0.2"/>
            <DoubleAnimation Storyboard.TargetName="AllBorder" Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.2"/>
        </Storyboard>
    </Window.Resources>
    <Border x:Name="AllBorder" CornerRadius="8" MouseDown="TitleBar_MouseDown" Background="{DynamicResource WindowBackground}" ClipToBounds="True" BorderBrush="#1E444444" BorderThickness="2">
        <Grid>
            <!-- 主界面内容 -->
            <Grid x:Name="MainGrid" RenderTransformOrigin="0.5,0.5">
                <Grid.RenderTransform>
                    <ScaleTransform/>
                </Grid.RenderTransform>
                <Grid.RowDefinitions>
                    <RowDefinition Height="31"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 标题栏 -->
                <Grid Height="31"  Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal">


                        <TextBlock x:Name="textblock_title" Grid.Column="1" Margin="20,0,0,0" Text="About" Foreground="{DynamicResource PrimaryForeground}" VerticalAlignment="Center" FontSize="14" HorizontalAlignment="Left"/>

                    </StackPanel>
                    
                    <Button Grid.Column="4" Width="25" Height="25" Margin="0,0,3,0" Click="Button_Click" Background="#E57373" Tag="#EF9A9A" BorderBrush="#D32F2F" Style="{DynamicResource ControlButtonStyle}">
                        <Canvas>
                            <Line X1="6" Y1="6" X2="14" Y2="14" Stroke="Black" StrokeThickness="2"/>
                            <Line X1="14" Y1="6" X2="6" Y2="14" Stroke="Black" StrokeThickness="2"/>
                        </Canvas>
                    </Button>
                </Grid>
            </Grid>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <!-- 中间内容区域 -->
                <Grid Grid.Row="1" Margin="30,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 左上：企业理念 -->
                    <Border Grid.Column="0" Grid.Row="0" Background="Transparent" 
                   CornerRadius="8" Margin="0,0,10,10" >
                        <Grid Margin="18">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Text="企业理念" 
                              FontSize="18" FontWeight="Bold" Foreground="#8C00B3" 
                              Margin="0,0,0,12"/>
                            <TextBlock Grid.Row="1" TextWrapping="Wrap" FontSize="13" 
                              Foreground="#0083B3" VerticalAlignment="Center">
                        以攻击者视角重塑安全防线，主动发现和验证企业潜在风险，
                        将安全从被动响应转为主动防御。
                            </TextBlock>
                        </Grid>
                    </Border>

                    <!-- 右上：服务一 -->
                    <Border Grid.Column="1" Grid.Row="0" Background="Transparent" 
                   CornerRadius="8" Margin="10,0,0,10" >
                        <Grid Margin="18">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Text="渗透测试与漏洞挖掘" 
                              FontSize="18" FontWeight="Bold" Foreground="#F3C21D" 
                              Margin="0,0,0,12"/>
                            <TextBlock Grid.Row="1" TextWrapping="Wrap" FontSize="13" 
                              Foreground="#0083B3" VerticalAlignment="Center">
                        深入发现系统和应用的安全漏洞，帮助企业提前防范真实威胁。
                            </TextBlock>
                        </Grid>
                    </Border>

                    <!-- 左下：服务二 -->
                    <Border Grid.Column="0" Grid.Row="1" Background="Transparent" 
                   CornerRadius="8" Margin="0,10,10,0" >
                        <Grid Margin="18">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Text="红队演练" 
                              FontSize="18" FontWeight="Bold" Foreground="#E03926" 
                              Margin="0,0,0,12"/>
                            <TextBlock Grid.Row="1" TextWrapping="Wrap" FontSize="13" 
                              Foreground="#0083B3" VerticalAlignment="Center">
                        模拟真实攻击场景，检验企业整体安全防护与员工安全意识。
                            </TextBlock>
                        </Grid>
                    </Border>

                    <!-- 右下：免杀实战咨询 + 二维码 -->
                    <Border Grid.Column="1" Grid.Row="1" Background="Transparent" 
                   CornerRadius="8" Margin="10,10,0,0" >
                        <Grid Margin="18">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="免杀实战咨询" 
                                  FontSize="18" FontWeight="Bold" Foreground="#A3FF78" 
                                  Margin="0,0,0,12"/>
                                <TextBlock TextWrapping="Wrap" FontSize="13" 
                                  Foreground="#0083B3" LineHeight="20">
                            提供专业的终端防护绕过方案，帮助企业检测和加固安全系统。
                            我们擅长针对主流EDR/AV产品的免杀绕过测试，验证防御体系的
                            真实防护能力，识别潜在风险点。
                                </TextBlock>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                                <Image x:Name="QrImage" Source="pack://application:,,,/Resources/qr.png" Width="80" Height="80" Stretch="Uniform"/>
                                <TextBlock Text="扫码联系我们" FontSize="11" Foreground="#0083B3" 
                                  TextAlignment="Center" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>

                <!-- 底部版权信息 -->
                <Border Grid.Row="2" Background="Transparent" Padding="15,10">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="© 2025 宇神天下（上海）信息科技有限公司" 
                          FontSize="12" Foreground="#0083B3" Opacity="0.8"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>

</Window>