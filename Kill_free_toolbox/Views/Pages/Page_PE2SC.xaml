<Page x:Class="Kill_free_toolbox.Views.Pages.Page_PE2SC"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kill_free_toolbox.Views.Pages"
      mc:Ignorable="d"   d:DesignHeight="450" d:DesignWidth="800"
      TextOptions.TextFormattingMode="Display"
      AllowDrop="True"
      PreviewDragEnter="Page_PreviewDragEnter"
      PreviewDragOver="Page_PreviewDragOver"
      PreviewDragLeave="Page_PreviewDragLeave"
      PreviewDrop="Page_PreviewDrop">

    <Page.Resources>
        <!-- 统一颜色资源，便于修改主题 -->
        <SolidColorBrush x:Key="CardBorder" Color="#FFE6EAF0"/>
        <SolidColorBrush x:Key="Primary" Color="#FF2F80ED"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#FF6B7888"/>
        <Style x:Key="InfoSmall" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
        </Style>
    </Page.Resources>

    <Grid>
        <!-- 中心卡片 -->
        <Border x:Name="DropArea"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="520"
                Height="320"
                CornerRadius="12"
                BorderThickness="1"
                BorderBrush="{StaticResource CardBorder}"
                Padding="20"
                SnapsToDevicePixels="True">

            <Grid>
                <!-- 使用 Rectangle 绘制虚线内框，兼容 .NET Framework 4 -->
                <Rectangle Margin="8"
                           Stroke="{StaticResource CardBorder}"
                           StrokeThickness="1.5"
                           RadiusX="8"
                           RadiusY="8"
                           StrokeDashArray="4 4"
                           Fill="Transparent" />

                <!-- 内容 -->
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">


                    <!-- 标题 -->
                    <TextBlock x:Name="DropTitle"
                               Text="将文件拖放到此处"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource Primary}"
                               HorizontalAlignment="Center"
                               Margin="0,4,0,2"/>

                    <!-- 副标题 / 提示 -->
                    <TextBlock x:Name="DropHint"
                               Text="支持PE文件 — 自动检测x86/x64架构,(托管程序待支持)"
                               Style="{StaticResource InfoSmall}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,8"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
