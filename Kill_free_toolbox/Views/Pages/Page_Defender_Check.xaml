<Page x:Class="Kill_free_toolbox.Views.Pages.Page_Defender_Check"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kill_free_toolbox.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page_Defender_Check">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题 -->

        <!-- 文件选择区域 -->

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

                <TextBox x:Name="FilePathTextBox" 
                         Grid.Column="0" Margin="5"
                         IsReadOnly="True" Height="32"
                         Text="请选择要检测的文件..." VerticalAlignment="Center"/>

                <Button x:Name="BrowseButton" 
                        Grid.Column="1" Margin="5"
                         Height="32" Width="80"
                        Content="浏览文件"
                        Click="BrowseButton_Click"/>
            <Button x:Name="StartScanButton" 
                    Height="32" Width="80"
                    Grid.Column="2"
                    Content="开始检测"
                    Margin="5"
                    Click="StartScanButton_Click"
                    IsEnabled="False"/>

            <Button x:Name="StopScanButton" 
                     Height="32" Width="80" Grid.Column="3" Margin="5"
                    Content="停止检测"
                    Click="StopScanButton_Click"
                    IsEnabled="False">

            </Button>
        </Grid>


        <!-- 控制按钮区域 -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" 
                    HorizontalAlignment="Left" Margin="0,0,0,15">

        </StackPanel>

        <!-- 输出区域 -->
        <Border Grid.Row="2" Background="#FF1E1E1E" 
                CornerRadius="6" Padding="5">
            <ScrollViewer x:Name="OutputScrollViewer" 
                          VerticalScrollBarVisibility="Auto">
                <TextBox x:Name="OutputTextBlock" 
                           Foreground="#FFDCDCDC" 
                           FontFamily="Consolas" 
                           FontSize="12"
                           TextWrapping="Wrap"
                           IsReadOnly="True"
                           IsReadOnlyCaretVisible="True"
                           BorderThickness="0"
                           Background="Transparent"
                           Text="准备就绪，请选择文件开始检测..."/>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>
