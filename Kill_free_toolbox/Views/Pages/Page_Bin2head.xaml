<Page x:Class="Kill_free_toolbox.Views.Pages.Page_Bin2head"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"  d:DesignHeight="450" d:DesignWidth="800"
      TextOptions.TextFormattingMode="Display"
      Title="Page_Bin2head"
      AllowDrop="True"
      PreviewDragEnter="Page_PreviewDragEnter"
      PreviewDragOver="Page_PreviewDragOver"
      PreviewDragLeave="Page_PreviewDragLeave"
      PreviewDrop="Page_PreviewDrop">

    <Page.Resources>
        <!-- 统一颜色资源，便于修改主题 -->
        <SolidColorBrush x:Key="CardBorder" Color="#FFE6EAF0"/>
        <SolidColorBrush x:Key="Primary" Color="#FF2F80ED"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#FF6B7888"/>
        <Style x:Key="InfoSmall" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
        </Style>
    </Page.Resources>

    <Grid>
        <!-- 中心卡片 -->
        <Border x:Name="DropArea"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="520"
                Height="320"
                CornerRadius="12"
                BorderThickness="1"
                BorderBrush="{StaticResource CardBorder}"
                Padding="20"
                SnapsToDevicePixels="True">

            <Grid>
                <!-- 使用 Rectangle 绘制虚线内框，兼容 .NET Framework 4 -->
                <Rectangle Margin="8"
                           Stroke="{StaticResource CardBorder}"
                           StrokeThickness="1.5"
                           RadiusX="8"
                           RadiusY="8"
                           StrokeDashArray="4 4"
                           Fill="Transparent" />

                <!-- 内容 -->
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <!-- 标题 -->
                    <TextBlock x:Name="DropTitle"
                               Text="将文件拖放到此处"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource Primary}"
                               HorizontalAlignment="Center"
                               Margin="0,4,0,8"/>

                    <!-- 语言选择区域 -->

                    <StackPanel>
                        <TextBlock Text="选择生成语言："
                                       Style="{StaticResource InfoSmall}"
                                       FontWeight="Medium"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,6"/>

                        <!-- 语言复选框 - 使用 WrapPanel 自动换行 -->
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <CheckBox Grid.Column="0" Grid.Row="0" x:Name="CheckC" Content="C" IsChecked="True" Margin="8,2"/>
                            <CheckBox Grid.Column="1" Grid.Row="0" x:Name="CheckCSharp" Content="C#" IsChecked="False" Margin="8,2"/>
                            <CheckBox Grid.Column="2" Grid.Row="0" x:Name="CheckGo" Content="Go" IsChecked="False" Margin="8,2"/>
                            <CheckBox Grid.Column="0" Grid.Row="1" x:Name="CheckJS" Content="JavaScript" IsChecked="False" Margin="8,2"/>
                            <CheckBox Grid.Column="1" Grid.Row="1" x:Name="CheckPython" Content="Python" IsChecked="False" Margin="8,2"/>
                            <CheckBox Grid.Column="2" Grid.Row="1" x:Name="CheckRust" Content="Rust" IsChecked="False" Margin="8,2"/>
                        </Grid>
                        
                        <!-- 快捷操作按钮 -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,6,0,0">
                            <Button x:Name="BtnSelectAll" Content="全选" 
                                    Click="BtnSelectAll_Click"
                                    Margin="10" 
                                    FontSize="11" Background="Transparent" 
                                    BorderBrush="{StaticResource TextSecondary}" 
                                    Foreground="{StaticResource TextSecondary}"/>
                            <Button x:Name="BtnSelectNone" Content="取消" 
                                    Click="BtnSelectNone_Click"
                                    Margin="10" 
                                    FontSize="11" Background="Transparent" 
                                    BorderBrush="{StaticResource TextSecondary}" 
                                    Foreground="{StaticResource TextSecondary}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- 副标题 / 提示 -->
                    <TextBlock x:Name="DropHint"
                               Text="支持任意文件 — 放开后转换文件"
                               Style="{StaticResource InfoSmall}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,8"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>