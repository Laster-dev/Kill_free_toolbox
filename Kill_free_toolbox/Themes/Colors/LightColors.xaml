<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- 亮色主题颜色定义 -->
    
    <!-- 基础背景颜色 -->
    <SolidColorBrush x:Key="PrimaryBackground" Color="#F5F5F5"/>
    <!-- 主背景：纯净灰白 -->
    
    <SolidColorBrush x:Key="SecondaryBackground" Color="#EFEFEF"/>
    <!-- 次背景：柔和淡灰 -->
    
    <SolidColorBrush x:Key="WindowBackground" Color="#F8F8F8"/>
    <!-- 窗口背景：最浅灰白 -->
    
    <!-- 边框颜色 -->
    <SolidColorBrush x:Key="BorderBrush" Color="#CCCCCC"/>
    <!-- 描边：中性灰 -->
    
    <SolidColorBrush x:Key="SeparatorBrush" Color="#DDDDDD"/>
    <!-- 分割线：淡灰 -->
    
    <!-- 文本颜色 -->
    <SolidColorBrush x:Key="PrimaryForeground" Color="#333333"/>
    <!-- 主文本：深灰近黑 -->
    
    <SolidColorBrush x:Key="DisabledForeground" Color="#AAAAAA"/>
    <!-- 禁用：柔和灰 -->
    
    <!-- 交互状态颜色 -->
    <SolidColorBrush x:Key="HoverBrush" Color="#E8E8E8"/>
    <!-- 悬停：轻微变暗 -->
    
    <SolidColorBrush x:Key="PressedBrush" Color="#DADADA"/>
    <!-- 按压：明显按下效果 -->
    
    <SolidColorBrush x:Key="SelectedBrush" Color="#D8D8D8"/>
    <!-- 选中：均衡灰色 -->
    
    <!-- 多彩配色：主题色点缀用 -->
    <SolidColorBrush x:Key="HighlightBrush" Color="#7C3AED"/>
    <!-- 主色：紫蓝 -->
    
    <SolidColorBrush x:Key="SuccessBrush" Color="#10B981"/>
    <!-- 绿色 -->
    
    <SolidColorBrush x:Key="InfoBrush" Color="#3B82F6"/>
    <!-- 蓝色 -->
    
    <SolidColorBrush x:Key="WarningBrush" Color="#F59E0B"/>
    <!-- 橙色 -->
    
    <SolidColorBrush x:Key="ContextMenuBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ContextMenuBorderBrush" Color="#CCCCCC"/>
    <SolidColorBrush x:Key="ContextMenuItemBackground" Color="Transparent"/>
    <SolidColorBrush x:Key="ContextMenuItemForeground" Color="#333333"/>
    <SolidColorBrush x:Key="ContextMenuItemHoverBackground" Color="#E0E7FF"/>
    
</ResourceDictionary>
