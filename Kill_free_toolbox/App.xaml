<Application x:Class="Kill_free_toolbox.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Kill_free_toolbox"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- 默认加载深色主题 - 从 IPluginContracts 程序集引用 -->
                <ResourceDictionary Source="pack://application:,,,/Kill_free_toolbox;component/Themes/DarkTheme.xaml"/>
                <!-- 浅色主题将在需要时通过代码动态加载 -->
            </ResourceDictionary.MergedDictionaries>

            <!-- 备用资源 - 防止主题切换时资源丢失 -->
            <SolidColorBrush x:Key="FallbackBackground" Color="#2E2E2E"/>
            <SolidColorBrush x:Key="FallbackForeground" Color="White"/>
            <SolidColorBrush x:Key="FallbackBorder" Color="#555555"/>
            <Style TargetType="Control">
                <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
